---
const { image, url, name, description } = Astro.props;
---

<article class="flex items-center gap-4">
	<a href={url} target="_blank">
		<img src={image} alt="" class="max-h-56 object-contain" />
	</a>
	<div class="space-y-2">
		<h3 class="text-xl leading-tight font-bold">
			<a href={url} target="_blank" class="text-black">{name}</a>
		</h3>
		<p class="text-gray-500">{description}</p>
		<a
			href={url}
			class="inline-block bg-[#FFD814] text-black px-6 py-2 rounded-lg shadow hover:bg-[#e7c414]"
			target="_blank">Ver oferta en Amazon</a
		>
	</div>
</article>
