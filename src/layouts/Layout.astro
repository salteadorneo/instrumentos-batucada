---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const { title, description } = Astro.props;

const titleJoin = title ? `${title} - ${SITE_TITLE}` : SITE_TITLE;
const descriptionJoin = description || SITE_DESCRIPTION;
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={titleJoin} description={descriptionJoin} />
    </head>
    <body>
        <Header title={SITE_TITLE} />
        <main class="max-w-4xl mx-auto p-4">
            <slot />
        </main>
        <Footer />
        <style is:global>
            :root {
                --color-primary: #ffc400;
                --color-secondary: #14532d;
            }

            html {
                overflow-y: scroll;
            }

            p {
                margin: 0 0 1rem 0;
            }

            a {
                color: var(--color-secondary);
            }

            h1,
            h2,
            h3,
            h4 {
                font-weight: 700;
                margin: 0.5rem 0 1rem;
                line-height: 1.2;
            }

            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.8rem;
            }

            h3 {
                font-size: 1.6rem;
            }

            h4 {
                font-size: 1.4rem;
            }
        </style>
    </body>
</html>
